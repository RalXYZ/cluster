/* component/listcard/listcard.wxss */
.content {
  display: flex;
  height: 280rpx;
  margin: 30rpx 20rpx 0 20rpx;
  background-color: #ebd4d4;
  border-radius: 25rpx;
}
.title{
  margin:0 auto;
  width: 100%;
  background-color:#00000008;
  display: flex;
  justify-content: center;
  align-items: center;
}
.titleTxt{
  font-size: 35rpx;
  font-weight: bold;
  font-family: 'Times New Roman', Times, serif;
}
.detail {
  display: -webkit-box;
  position: relative;
  height: 4.3em;
  display: flex;
  bottom: 15rpx;
  align-items: center;
  margin: 0 auto; 
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.img {
  padding: 10rpx;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top:1rpx;
}

.founder {
  display: flex;
}

.type {
  padding: 30rpx 20rpx;
  border-right-style: double;
  border-right-width: 10rpx;
  margin-right: 10rpx;
  border-color: #835858;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.typetext {
  writing-mode: vertical-lr;
  position: relative;
  left: 5rpx;
  /* bottom: 50rpx; */
  height: 150rpx;
  text-align-last: justify;
}

.typetext text {
  font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
  font-size: 40rpx;
  position: relative;
  right: 4rpx;
  color: #463333;
  font-weight: bold;
}

.info {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.bot {
  display: flex;
  flex-grow: 1;
  align-self: flex-end;
  justify-content: space-between;
}

.progress {
  margin: 0 20rpx;
  display: flex;
  height: 100rpx;
}

.filled {
  background: #d4237a;
  height: 10rpx;
  flex: 1;
}

.itm {
  border-style: solid;
  border-color: cornsilk;
  height: 10rpx;
  flex: 1;
}

.empty {
  height: 10rpx;
  flex: 1
}

.detail {
  color: #463333;
  size: 20rpx;
}

.founder-icon {
  width: 40rpx;
  height: 35rpx;
  position: relative;
  top: 7rpx;
}

.icon {
  width: 60rpx;
  height: 20rpx;
}

.icon image {
  width: 60rpx;
  height: 60rpx;
}

.time {
  color: #835858;
}

.founder text {
  color: #835858;
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-weight: 550;
}