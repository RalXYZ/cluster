<view class="content" bindtap="viewAct">
  <view class="type">
    <view class="icon">
      <image src="{{src}}" mode="aspectFit"></image>
    </view>
    <view class="typetext">
      <text>{{item.type}}</text>
    </view>
  </view>
  <view class="info">
    <view class="title">
      <view class="titleTxt">
        <text>{{item.name}}</text>
      </view>
    </view>
    <view class="detail">
      <text class="detaiTxt">
        {{item.detail}}
      </text></view>
    <view class="bot">
      <view class="founder">
        <image class="founder-icon" src="../../images/founder-icon.png"></image>
        <text>局长：{{item.founder}}</text> 
        <view class="sex">
          <view wx:if="{{item.sex}}"><image class="img" src="../../images/man.png" alt="男"/></view>
            <view wx:else>
              <image class="img" src="../../images/woman.png" alt="女"/>
            </view>
        </view>
      </view>
      <view class="time">{{item.time}}分钟前</view>
    </view>
  </view>
</view>
<view class="progress">
  <view class="itm" wx:for="{{progArray}}" wx:key="index" wx:for-item="block">
      <view wx:if="{{block}}" class="filled"></view>
      <view wx:else class="empty"></view>
  </view>
</view>

