/*下拉框*/
.selectBox { 
  width: 200rpx;
  position: relative;
  text-align: center;
  z-index: 2;
  margin: 0 20rpx 0 0;
}
.selectBox .select{
  box-sizing: border-box;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}
.selectBox .select .selectText{
  color: #555555;
  flex: 1;
  font-weight: bold;
}
.selectBox .select .selectImg{
  width: 70rpx;
  height: 70rpx;
  display: block;
  transition:transform 0.3s;
}
.selectBox .select .selectImgRotate{
  transform:rotate(180deg); 
}
.selectBox .optionBox{
  position: absolute;
  top: calc(100% - 1px);
  width: 200rpx;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  background: rgba(204, 107, 123, 0.658);
  transition: height 0.3s;
  border-left:2px solid #f3a9a9;
  border-right:3px solid #f3a9a9;
}
.selectBox .optionBox .option{
  display: block;
  line-height: 35rpx;
  color: rgb(58, 56, 56);
  border-top: 1px solid #eed3d3;
  border-bottom: 1px solid #eed3d3;
  padding: 10rpx 0;
}

/*  slider  */
.slider {
  width: 420rpx;
  position: relative;
  margin: 0rpx auto 0rpx;
}
.sliderBox {
  width: 88%;
  margin: 0 auto;
  position: absolute;
  left: 50%;
  top: 35%;
  transform: translate(-50%, -50%);}
.sliderLine{
  width: 100%;
  height: 10rpx;
  background: rgba(91, 150, 246, 0.1);
  margin: 0 auto;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);}
.sliderLineActive{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate(0, -50%);
  height: 10rpx;
  background: #C8B7B5;
}
.sliderBtn{
  width: 70rpx;
  height: 35rpx;
  background: #C8B7B5;
  border-radius: 18rpx;
}
.sliderNumber { 
  width: 100%;
  position: absolute;
  bottom: -10rpx;}
.sliderNumber text{
  position: absolute; 
  top: 0;
  font-size: 24rpx;
  color: #999999;
  transition: all 0.3s;
}
.sliderNumber text.active {
  font-size: 32rpx;
  color: #C8B7B5;
  transition: all 0.3s;
}
slider{opacity:0;}

